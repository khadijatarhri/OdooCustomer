<?xml version="1.0" encoding="utf-8"?>  
<odoo>  
    <data noupdate="1">  
        <!-- Groupe VRP User  -->    
        <record id="group_vrp_user" model="res.groups">    
            <field name="name">VRP User</field>    
            <field name="category_id" ref="base.module_category_operations"/>    
        </record>    
  
        <!-- Groupe VRP Manager (référence group_vrp_user) -->    
        <record id="group_vrp_manager" model="res.groups">    
            <field name="name">VRP Manager</field>    
            <field name="category_id" ref="base.module_category_operations"/>    
            <field name="implied_ids" eval="[(4, ref('group_vrp_user'))]"/>    
        </record>    
  
        <!-- Règles de sécurité pour les véhicules  -->  
        <record id="vrp_vehicle_rule" model="ir.rule">  
            <field name="name">VRP Vehicle Access</field>  
            <field name="model_id" ref="model_vrp_vehicle"/>  
            <field name="groups" eval="[(4, ref('group_vrp_user'))]"/>  
            <field name="perm_read" eval="1"/>  
            <field name="perm_write" eval="1"/>  
            <field name="perm_create" eval="1"/>  
            <field name="perm_unlink" eval="1"/>  
        </record>  
  
        
        
    </data>  
</odoo>