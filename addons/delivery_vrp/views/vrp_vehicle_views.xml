<?xml version="1.0" encoding="utf-8"?>    
<odoo>    
    <!-- Vue liste des véhicules -->    
    <record id="vrp_vehicle_view_tree" model="ir.ui.view">    
        <field name="name">vrp.vehicle.tree</field>    
        <field name="model">vrp.vehicle</field>  
        <field name="type">list</field>  
        <field name="arch" type="xml">    
            <list>    
                <field name="name"/>    
                <field name="code"/>    
                <field name="vehicle_type"/>    
                <field name="capacity_weight"/>    
                <field name="capacity_volume"/>    
                <field name="depot_id"/>    
                <field name="availability"/>    
                <field name="active"/>    
            </list>    
        </field>    
    </record>    
    
    <!-- Vue formulaire des véhicules -->    
    <record id="vrp_vehicle_view_form" model="ir.ui.view">    
        <field name="name">vrp.vehicle.form</field>    
        <field name="model">vrp.vehicle</field>    
        <field name="arch" type="xml">    
            <form>    
                <header>    
                    <field name="availability" widget="statusbar"/>    
                </header>    
                <sheet>    
                    <div class="oe_title">    
                        <h1>    
                            <field name="name" placeholder="Nom du véhicule"/>    
                        </h1>    
                    </div>    
                    <group>    
                        <group>    
                            <field name="code"/>    
                            <field name="vehicle_type"/>    
                            <field name="depot_id"/>    
                            <field name="active"/>    
                        </group>    
                        <group>    
                            <field name="capacity_weight"/>    
                            <field name="capacity_volume"/>    
                            <field name="max_distance"/>    
                            <field name="cost_per_km"/>    
                        </group>    
                    </group>    
                    <group string="Contraintes de temps">    
                        <group>    
                            <field name="work_start_time" widget="float_time"/>    
                            <field name="work_end_time" widget="float_time"/>    
                        </group>    
                    </group>    
                    <notebook>    
                        <page string="Tournées">    
                            <field name="route_ids">    
                                <list>    
                                    <field name="name"/>    
                                    <field name="date"/>    
                                    <field name="state"/>    
                                    <field name="total_distance"/>    
                                    <field name="load_rate"/>    
                                </list>    
                            </field>    
                        </page>    
                    </notebook>    
                </sheet>    
            </form>    
        </field>    
    </record>    
    
    <!-- Action pour les véhicules -->    
    <record id="vrp_vehicle_action" model="ir.actions.act_window">    
        <field name="name">Véhicules VRP</field>    
        <field name="res_model">vrp.vehicle</field>    
        <field name="view_mode">list,form</field>    
        <field name="help" type="html">    
            <p class="o_view_nocontent_smiling_face">    
                Créez votre premier véhicule VRP    
            </p>    
            <p>    
                Définissez les véhicules disponibles pour vos tournées avec leurs capacités et contraintes.    
            </p>    
        </field>    
    </record>    
</odoo>